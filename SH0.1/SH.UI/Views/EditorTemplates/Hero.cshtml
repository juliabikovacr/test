@model SH.Models.Hero

<div id="hero">
    <fieldset>
        @Html.HiddenFor(model => model.ID)
        @Html.TextBoxFor(model => model.Name)<br>
        @Html.EditorFor(model => model.Year)<br>
        @if (Model.Studio != null)
        {
            @Html.DropDownListFor(model => model.Studio.ID, new SelectList((List<SH.Models.Studio>)ViewData["Studios"], "ID", "Name", Model.Studio))<br>
        }
        else
        {
            @Html.DropDownListFor(model => model.Studio.ID, new SelectList((List<SH.Models.Studio>)ViewData["Studios"], "ID", "Name"));
        }
    </fieldset>
</div>